<?xml version="1.0" encoding="UTF-8"?>

<process-definition  xmlns="urn:jbpm.org:jpdl-3.2"  name="singleDecision">


	<description>
		A decision.
	</description>


	<start-state name="start-state">
		<transition to="decision" />
	</start-state>


	<decision name="decision">
		<transition to="end-state1">
            <condition> <![CDATA[#{1 == 1}]]></condition>
        </transition>    
		<transition to="end-state2" name="to-end-state2" />
	</decision>


	<end-state name="end-state1">
        <event type="node-enter">
            <action class="org.jbpm.migration.tools.jpdl.handlers.DefaultActionHandler" />
        </event>
    </end-state>

	<end-state name="end-state2" />


</process-definition>